<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%=restaurant.name %>
    <p>
      <%= link_to "Show this restaurant", restaurant %>
      <%= link_to "Delete",
  restaurant_path(restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </p>
  <% end %>
</div>
